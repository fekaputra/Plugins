  <artifactId>uv-t-relational</artifactId>
  <version>1.0.0</version>
  <packaging>bundle</packaging>
  <name>T-Relational</name>
  <description>Transforms input database tables using SQL into one output table</description>
  
  <properties>
    <dpu.package>eu.unifiedviews.plugins.transformer.relational</dpu.package>
    <dpu.mainClass>Relational</dpu.mainClass>
    <junit.version>4.12</junit.version>
    <uv.helpers.version>[2.0.0,3.0.0)</uv.helpers.version>
    <module-test.version>2.0.0</module-test.version>
  </properties>
  
  <dependencies>
        <!-- UnifiedViews helpers. -->
        <dependency>
            <groupId>eu.unifiedviews</groupId>
            <artifactId>uv-dataunit-helpers</artifactId>
            <version>${uv.helpers.version}</version>
            <scope>compile</scope>
        </dependency>
        
        <dependency>
            <groupId>eu.unifiedviews</groupId>
            <artifactId>uv-dpu-helpers</artifactId>
            <version>${uv.helpers.version}</version>
            <scope>compile</scope>
        </dependency>

		<!--  JUnit tests dependencies -->
		<dependency>
			<groupId>cz.cuni.mff.xrg.odcs</groupId>
			<artifactId>module-test</artifactId>
			<version>${module-test.version}</version>
			<scope>test</scope>
		</dependency>
		
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>${junit.version}</version>
			<scope>test</scope>
		</dependency>
		
		<dependency>
			<groupId>com.h2database</groupId>
			<artifactId>h2</artifactId>
			<version>1.4.182</version>
			<scope>test</scope>
		</dependency>
	</dependencies>
  
  <repositories>
        <repository>
            <id>maven.eea.sk</id>
            <name>maven.eea.sk-public</name>
            <url>http://maven.eea.sk/artifactory/public/</url>
        </repository>
    </repositories>
