<?xml version="1.0"?>
<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>
	<groupId>eu.unifiedviews</groupId>
	<artifactId>FilesToFilesXSLT2Transformer</artifactId>
	<version>1.2.2</version>
	<packaging>bundle</packaging>
	<description>FilesToFilesXSLT2Transformer does XSLT over Files and outputs Files.</description>

	<properties>
		<project.java.version>1.7</project.java.version>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<dpu.package>cz.cuni.mff.xrg.odcs.dpu.filestofilesxslt2transformer</dpu.package>
		<dpu.mainClass>FilesToFilesXSLT2Transformer</dpu.mainClass>
		<!-- this is required in order to use 'copy-to-odcl' and 'publish-to-odcl' 
			profiles -->
		<dpu.odcl.dir></dpu.odcl.dir>
		<!-- use to automatically embed transitive dependencies -->
		<embed.transitive>false</embed.transitive>
	</properties>


	<dependencies>
		<dependency>
			<groupId>eu.unifiedviews</groupId>
			<artifactId>uv-dpu-api</artifactId>
			<version>1.0.0</version>
			<type>jar</type>
		</dependency>

		<dependency>
			<groupId>eu.unifiedviews</groupId>
			<artifactId>uv-dpu-api-helpers</artifactId>
			<version>1.0.0</version>
			<type>jar</type>
		</dependency>

		<dependency>
			<groupId>eu.unifiedviews</groupId>
			<artifactId>uv-dataunit-rdf</artifactId>
			<version>1.0.0</version>
			<type>jar</type>
		</dependency>

		<dependency>
			<groupId>eu.unifiedviews</groupId>
			<artifactId>uv-dataunit-files</artifactId>
			<version>1.0.0</version>
			<type>jar</type>
		</dependency>

		<dependency>
			<groupId>eu.unifiedviews</groupId>
			<artifactId>uv-dataunit-helpers</artifactId>
			<version>1.0.0</version>
			<type>jar</type>
		</dependency>

		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-api</artifactId>
			<version>1.7.7</version>
		</dependency>

		<dependency>
			<groupId>org.apache.commons</groupId>
			<artifactId>commons-lang3</artifactId>
			<version>3.0</version>
		</dependency>

		<dependency>
			<groupId>net.sf.saxon</groupId>
			<artifactId>Saxon-HE</artifactId>
			<version>9.4</version>
			<!--<version>9.4.0-9</version> -->
			<!--<version>9.5.1-5</version> -->
			<type>jar</type>
		</dependency>

<!-- 		<dependency> -->
<!-- 			<groupId>xml-resolver</groupId> -->
<!-- 			<artifactId>xml-resolver</artifactId> -->
<!-- 			<version>1.2</version> -->
<!-- 		</dependency> -->
	</dependencies>

	<build>
		<!-- add license from LICENSE.md to the generated JAR file -->
		<resources>
			<resource>
				<directory>${basedir}</directory>
				<!-- this is default dir -->
				<includes>
					<include>LICENSE.md</include>
				</includes>
			</resource>
		</resources>
		
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-compiler-plugin</artifactId>
					<configuration>
						<source>${project.java.version}</source>
						<target>${project.java.version}</target>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>

		<plugins>
			<plugin> <!-- main build plugin for modules -->
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<version>2.3.7</version>
				<extensions>true</extensions>
				<configuration>
					<instructions>
						<!-- dependencies embedding -->
						<Embed-Dependency>*;groupId=net.sf.saxon;scope=compile|system</Embed-Dependency>
						<!-- use provided for dependencies that are provided by application -->
						<Embed-Transitive>${embed.transitive}</Embed-Transitive>
						<!-- using true cause adding new imports for new packages !! -->
						<!-- dependencies location in output file -->
						<Embed-Directory>dependency</Embed-Directory>
						<Embed-StripGroup>false</Embed-StripGroup>
						<!-- information for ODCleanStore -->
						<DPU-Package>${dpu.package}</DPU-Package>
						<DPU-MainClass>${dpu.mainClass}</DPU-MainClass>
						<Build-Time>${maven.build.timestamp}</Build-Time>
					</instructions>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<!-- define license -->
	<licenses>
		<license>
			<name>GNU Lesser General Public License, Version 3</name>
			<url>https://www.gnu.org/licenses/lgpl-3.0.txt</url>
			<distribution>repo</distribution>
			<!-- https://maven.apache.org/pom.html#Licenses -->
		</license>
	</licenses>
</project>

