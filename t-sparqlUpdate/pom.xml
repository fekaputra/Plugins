    <groupId>eu.unifiedviews.plugins</groupId>
    <artifactId>uv-t-sparqlUpdate</artifactId>
    <name>T-SparqlUpdate</name>
    <description>Execute a single SPARQL Update query.</description>
    <version>3.0.2-SNAPSHOT</version>
    <packaging>bundle</packaging>

    <properties>
        <dpu.package>eu.unifiedviews.plugins.transformer.sparql.update</dpu.package>
        <dpu.mainClass>SparqlUpdate</dpu.mainClass>
    </properties>

    <dependencies>
