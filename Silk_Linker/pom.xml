<?xml version="1.0"?>
<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>cz.cuni.mff.xrg.odcs</groupId>
		<artifactId>module-core</artifactId>
		<version>1.0.0</version>
	</parent>
	<artifactId>Silk_Linker_Extractor</artifactId>
	<name>Silk_Linker_Extractor</name>
	<packaging>bundle</packaging>
        <version>1.0.0</version>
		<description>Module which is able to create links between two data
			sources. Input is the configuration file for silk. The output of the
			XSLT must be RDF data. </description>

	<dependencies>
		<dependency>
			<groupId>de.fuberlin.wiwiss.silk</groupId>
			<artifactId>silk-singlemachine</artifactId>
			<version>2.5.3</version>
			<type>jar</type>
			<scope>provided</scope>
		 <exclusions>
		  <exclusion>
		   <artifactId>slf4j-log4j12</artifactId>
		   <groupId>org.slf4j</groupId>
		  </exclusion>
		 </exclusions>
		</dependency>
		<dependency>
			<groupId>de.fuberlin.wiwiss.silk</groupId>
			<artifactId>silk-core</artifactId>
			<version>2.5.3</version>
			<type>jar</type>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>org.eclipse.tycho</groupId>
			<artifactId>org.eclipse.osgi</artifactId>
			<version>3.9.0.v20130305-2200</version>
			<scope>provided</scope>
		</dependency>
	</dependencies>

	<properties>
		
		<dpu.package>cz.cuni.mff.xrg.odcs.extractor.silklinker</dpu.package>
		<dpu.mainClass>SilkLinker</dpu.mainClass>
	</properties>

</project>
